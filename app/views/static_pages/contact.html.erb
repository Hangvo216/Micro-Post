<% provide(:title, 'Contact') %>
<h1>Contact</h1>
<p>
  <%= form_tag(:action => 'contact', method: 'post') do |f| %>
    
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :message %>
    <%= f.text_field :message %>

    <%= f.submit "Send Message", class: "btn btn-large btn-primary" %>
    <% end %>
</p>